<div class="container my-4">
  <div class="card shadow-sm" style="max-width: 500px;">
    <div class="row g-0 align-items-center">
      <div class="col-8">
        <div class="card-body py-3">
          <h5 class="card-title mb-2" style="word-break: break-word;">
            <%= @music.title %>
          </h5>
          <p class="mb-1"><span class="fw-bold">Artist:</span> <%= @music.artist %></p>
          <p class="mb-0"><span class="fw-bold">Album:</span> <%= @music.album %></p>
        </div>
      </div>
      <div class="col-4 text-end">
        <% unless @music.cover_url.nil? %>
          <%= image_tag @music.cover_url, alt: @music.title, class: "img-fluid rounded-end", style: "max-height: 90px;" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

    <div class="llm-card">
      <h3>Want more info? <br>
          Ask Maria:</h3>

    </div>
    <div class="llm-button">
      <%= button_to "Talk about this song", user_mood_music_chats_path(@user_mood_music), method: :post, class:"btn btn-purple btn-lg w-100 mt-3" %>
    </div>
  </div>
</div>
