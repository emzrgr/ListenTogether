<% if flash[:success] %>
  <div class="alert alert-success alert-dismissible fade show mt-4 px-4 py-3 fs-5 fw-semibold shadow-lg border border-success border-2 rounded" role="alert">
    <%= flash[:success] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="alert alert-success alert-dismissible fade show mt-4 px-4 py-3 fs-5 fw-semibold shadow-lg border border-success border-2 rounded" role="alert">
    <%= flash[:error] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
