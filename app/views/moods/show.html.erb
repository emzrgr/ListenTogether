<div class="mood-header mb-4">
  <h1><%= @mood.emoji %> Your <%= @mood.name.capitalize %> mood </h1>
</div>

<% if @mood.musics.any? %>
  <% @user_moods.each do |user_mood| %>
    <% if user_mood.mood_id == @mood.id && user_mood.user_id == current_user.id %>
      <div class="music-info-card d-flex justify-content-between align-items-end mt-3 p-2">
        <div class="text-info">
          <h3 class="mb-1">"<%= user_mood.music.title %>"</h3>
          <div class="artist-column">
            <p class="label">Artist:</p>
            <p><%= user_mood.music.artist %></p>
          </div>
          <div class="album-column">
            <p class="label">Album:</p>
            <p><%= user_mood.music.album %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% else %>
  <p class="text-center">No musics yet.</p>
<% end %>


<div class="d-flex justify-content-center mt-3">
  <%= link_to "Select  new mood", root_path, class: "generate-music-button btn btn-success" %>
</div>
